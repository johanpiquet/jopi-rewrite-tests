{
  "name": "jopi-rewrite-test",
  "private": "true",

  "engines": {
    "bun": "^1.2.18",
    "node": ">=22.18.0"
  },

  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",

  "scripts": {
    "build": "rm -rf ./dist; npx tsc",

    "tsc": "npx tsc",

    "devNode": "npx jopin dist/tests.js",
    "devBun": "bunx jopib --hot src/tests.ts",

    "start-node-manual": "npx jopin dist/tests.js",
    "start-bun-manual": "npx jopib src/tests.ts"
  },

  "devDependencies": {
    "@types/bun": "^1.2.20",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",

    "jopi-loader": "workspace:^",
    "@jopi-loader/types": "workspace:^",
    "jopi-node-space": "workspace:^"
  },

  "dependencies": {
    "jopi-rewrite": "workspace:^",
    "jopi-rewrite-ui": "workspace:^",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },

  "jopi": {
    "webSiteUrl": "http://127.0.0.1:3000",
    "inlineMaxSize_ko": 10
  }
}
