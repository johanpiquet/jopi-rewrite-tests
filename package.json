{
  "name": "jopi-rewrite-test",
  "version": "2.0.0-next.7",
  "private": "true",

  "engines": {
    "bun": "^1.2.18",
    "node": ">=22.18.0"
  },

  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",

  "scripts": {
    "build": "npx tsgo",
    "tsc": "npx tsc",

    "start-node": "jopin dist/tests.js",
    "start-bun": "jopib src/tests.ts",

    "start-node-manual": "bun --import jopi-loader dist/tests.js",
    "start-bun-manual": "bun --preload jopi-loader --preload jopi-rewrite src/tests.ts"
  },

  "devDependencies": {
    "@types/bun": "^1.2.20",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",

    "jopi-loader": "workspace:*",
    "@jopi-loader/types": "workspace:*",
    "jopi-node-space": "workspace:*"
  },

  "dependencies": {
    "axios": "^1.11.0",
    "jopi-rewrite": "workspace:*",
    "jopi-rewrite-ui": "workspace:*",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },

  "nodeSwitch": true,
  "nodeSwitch-default": "node",

  "watch": true
}
